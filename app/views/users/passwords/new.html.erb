
<div class="wrapper">
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <h3 class="form-signin-heading">Forgot Password</h3>
  <%= f.email_field :email, autofocus: true %>
  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn-lg btn-primary btn-block"%>
  </div>
  <br/>
  <%= render "users/shared/links" %>
<% end %>
</div>
