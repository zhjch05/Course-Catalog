<%= form_tag(course_index_path, :method => "get", id: "search-form", class: "form-inline") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Courses", class: "form-control" %>
<%= select_tag "subject", options_from_collection_for_select(@subjects, "id", "name"), include_blank: true, class: "form-control" %>
<%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
