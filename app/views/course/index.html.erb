<% if @courses.present? %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
      <tr>
    <% end %>
  <tbody>
<table>
<% else %>
<p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>
